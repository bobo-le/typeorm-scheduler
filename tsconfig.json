{
  "version": "2.1.1",
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "importHelpers": true,
    "incremental": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "pretty": true,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "include": [
    "index.ts",
    "src/**/*"
  ]
}